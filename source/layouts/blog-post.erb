<% wrap_layout :layout do %>
  <article>
    <% link_to current_article do %>
      <h1><%= current_article.title %></h1>
    <% end %>
    <%= yield %>
  </article>

  <nav>
    <span class="meta-nav">Previous</span>
    <% blog.articles[0...1].each do |article| %>
      <%= link_to article.title, article %>
    <% end %>
  </nav>
<% end %>